require "whenever/capistrano"
require 'capistrano/console'

# taskを記述したファイルを読み込むよう設定。場所と拡張子を指定。
Dir.glob('lib/capistrano/tasks/*.rake').each { |r| import r }

require "capistrano/scm/git"
install_plugin Capistrano::SCM::Git

